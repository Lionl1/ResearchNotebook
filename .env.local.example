# vLLM (LLM)
VLLM_API_KEY=sk
VLLM_API_BASE=http://localhost:8000/v1
VLLM_MODEL=Qwen/Qwen2.5-7B-Instruct

# Local embeddings (CPU)
EMBEDDINGS_MODEL=intfloat/multilingual-e5-base
EMBEDDINGS_DEVICE=cpu

# Disable OCR (extract-text)
OCR_LANGUAGES=none
ENABLE_PDF_IMAGE_OCR=false

# Optional: custom CA bundle for HTTPS scraping/doc downloads (PEM)
SCRAPE_CA_CERT_PATH=
# Optional: requests CA bundle (documents via extract-text)
REQUESTS_CA_BUNDLE=

# Embeddings search configuration
CHUNK_SIZE=1500
CHUNK_OVERLAP=200
MAX_SOURCE_CHARS=200000
SEARCH_TOP_K=5
CHROMA_DIR=.chroma
MAX_IMPORT_SIZE_MB=200
MAX_IMPORT_UNPACK_MB=200
MAX_IMPORT_FILES=4000

# Local STT
STT_PROVIDER=faster-whisper
STT_MODEL=small
STT_DEVICE=cpu
STT_COMPUTE_TYPE=int8
STT_BEAM_SIZE=5

# Optional: Gemini for /api/veo
GEMINI_API_KEY=
VEO_MODEL=veo-3.1-generate-preview

# Optional: CORS for external UI
CORS_ORIGINS=
